<world>
    <window width="512" height="512" />
    <camera>
        <position x="3" y="1" z="0" />
        <lookAt x="0" y="0" z="0" />
        <up x="0" y="1" z="0" />
        <projection fov="60" near="1" far="1000" />
    </camera>
    <group>
        <transform>
            <translate x="-2" y="0" z="-2" /> <!-- O campo align diz se o objecto deve ser orientado na curva -->
            <rotate time="10" x="0" y="1" z="0" />
            <scale x="0.5" y="0.5" z="0.5" />
        </transform>
        <models>
            <model file="sphere.3d" />
        </models>
    </group>
</world>